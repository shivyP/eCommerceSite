@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<script type="text/javascript" src="~/js/registration.js" defer></script>
<!-- sigin form -->

<section id="regform">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="formContent">
        <h3>Create your account</h3>



        <span class=" inpField">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" id="fname" />

        </span>
        <span class=" inpField">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" id="lname" />

        </span>
        <span class=" inpField">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" id="email" />

        </span>
        <span class=" inpField">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" id="password" />

        </span>
        <span class=" inpField ">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" id="pass1" />

        </span>
        <br />
        <p id="showPass"><input type="checkbox">&ensp;Show password</p>
        <span class="sButton">
            <button type="submit" id="signInButton">Register</button>
        </span>
        <!--span asp-validation-for="Input.FirstName" class="text-danger"></!--span>
        <br />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>
        <br />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <br />
