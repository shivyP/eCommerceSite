@page
@model eCommerceSite.Pages.manageUserModel
@{
}
<link rel="stylesheet" href="~/css/category.css" type="text/css" />

<section id="manageUsers">
    <h2>User Roles</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th colspan="2">User Roles</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.roles.Count != 0 || Model.roles != null)
            {
                @foreach (var role in Model.roles)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td class="addRole">
                            <span>
                                <a class="btn btn-sm bth-danger order-button float-right" 
                                   asp-route-id="@role.Id" asp-page-handler="Delete">Delete Role</a>
                            </span>
                        </td>
                    </tr>
                }

            }
            else
            {
                <p id="msg1" class="msg-accepted">The system has no roles.</p>
            }
            <tr>
                <td colspan="3">
                    <form method="post">
                        <label asp-for="@Model.roleName">Add role</label>
                        <input type="text" asp-for="@Model.roleName" />
                        <button type="submit" value="submit" asp-page="/manageUser">Save</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>

    <!-- add roles -->
   
</section>

<br /><br />
<section id="mUser">
    <h2>Users </h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Roles</th>
                <th> Update Password</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.users.Count != 0 )
            {
                @foreach (var user in Model.users)
                {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>

                <td>
                    <form method="post" asp-page-handler="Update" asp-route-id="@user.Id" >
                       
                        <input type="text" asp-for="newPassword" />
                        <button type="submit" value="Update Password" class="btn btn-default">Save</button>
                        
                    </form>
                </td>
                <td>
                    
                    <a class="btn btn-sm bth-danger order-button float-right" asp-page="/manageUser"
                       asp-route-id="@user.Id" asp-page-handler="Delete">Delete User</a>

                </td>
            </tr>
                }

            }
            else
            {
                <p id="msg1" class="msg-accepted">No other users.</p>
            }
        </tbody>
    </table>
   
    
</section>
 


